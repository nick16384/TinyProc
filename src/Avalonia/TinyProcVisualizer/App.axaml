<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TinyProcVisualizer.App"
             xmlns:local="using:TinyProcVisualizer"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <StyleInclude Source="avares://AvaloniaHex/Themes/Simple/AvaloniaHex.axaml"/>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <FontFamily x:Key="SourceCodeProFont">avares://TinyProcVisualizer/Resources/Fonts/SourceCodePro-Regular.ttf#Source Code Pro</FontFamily>
    </Application.Resources>
</Application>